@import "../_variables"
topmargin=30px
sidemargin=10px
listmargin=topmargin sidemargin (sidemargin * 2)
headerh=35px

.list
    margin 0
    position absolute
    top 0
    left 0
    right 0
    bottom 0

.inner
    padding listmargin
    width s('calc(%s - %s)', hundred, sidemargin * 2)
    height 100%
    display flex
    flex-flow row wrap
    align-content flex-start
    overflow-x hidden
    overflow-y auto
    &:after
        display block
        width 100%
        flex 2 2 100%
        content ""

.backButton
    background-color #FFF
    margin 10px
    border-radius 4px
    box-shadow 0 4px 8px rgba(0, 0, 0, 0.1)
    display flex
    align-items center
    justify-content center
    font-size 5em
    transition all 2s mdtiming, box-shadow 1s mdtiming
    position relative
    min-height (headerh * 2)
    min-width (headerh * 2)
    &:hover
        box-shadow 0 6px 12px rgba(black, 0.4)
