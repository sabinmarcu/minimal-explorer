@import "../_variables"

.container
    display flex
    position relative
    min-height 200px
    height 100%
    width 100%
    margin 0
    padding 0
    align-self center

.overlay
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background white
    
    opacity 0
    z-index -1
    
    transition all 1s mdtiming
    transition-delay 0.5s
    
    &.active
        opacity 1
        z-index 3
        
.spinner
    text-align center 
    > div
        background #aaa
    
.image
    display none
    opacity 0
    align-self center
    
    transition all 1s mdtiming
    
    &.active
        opacity 1
        display block
        